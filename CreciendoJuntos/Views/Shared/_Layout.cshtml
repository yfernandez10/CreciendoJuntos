<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <a href='@Url.Action("Index", "Home")'>
                <img src="~/Content/Images/logo.jpg"  class="img-circle" align="left" height="60" width="70" />
            </a>
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Creciendo Juntos", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"> Quienes Somos <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Quienes Somos", "About", "Home")</li>
                            <li>@Html.ActionLink("Mision y Vision", "Mision", "Home")</li>
                            <li>@Html.ActionLink("Personal", "Personal", "Home")</li>
                            <li>@Html.ActionLink("Instalaciones", "Instalaciones", "Home")</li>
                           
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Servicios", "Servicios", "Home")</li>
                    <li>@Html.ActionLink("Matrícula", "Matricula", "Home")</li>
                    <li>@Html.ActionLink("Contacto", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="mapouter"><div class="gmap_canvas"><iframe width="525" height="210" id="gmap_canvas" src="https://maps.google.com/maps?q=Belen%20Centro%20Creciendo%20Juntos&t=&z=13&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe><a href="https://www.bitgeeks.net/embed-google-map/"></a></div>
           </div>
            <p>Síguenos!</p>
            <a href="https://www.facebook.com/creciendojuntosad/">
                <img src="~/Content/Images/Face.png" class="img-circle"  height="35" width="35" />
            </a> 
            <a href="https://www.instagram.com/centro_creciendo_juntos/?igshid=5zea9kkpdxxr">
                <img src="~/Content/Images/Insta.png" class="img-circle" height="35" width="35" />
            </a> 
            <a href="https://wa.me/50686957159">
                <img src="~/Content/Images/Whatsapp.png" class="img-circle" height="35" width="35" />
            </a> 
            <p>&copy; @DateTime.Now.Year - Centro Creciendo Juntos</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
